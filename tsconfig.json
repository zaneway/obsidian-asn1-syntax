{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noResolve": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2017"
    ],
    "typeRoots": [
      "./types.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": [
    "main.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "main.js"
  ]
}